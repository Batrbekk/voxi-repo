# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# MongoDB
MONGODB_URI=your_mongodb_uri
DATABASE_NAME=voxi

# JWT
JWT_SECRET=your_jwt_secret
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your_refresh_secret
JWT_REFRESH_EXPIRATION=30d

# Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@voxi.kz
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=Voxi <your_email@voxi.kz>

# Frontend URL
FRONTEND_URL=http://localhost:3001

# Google Cloud
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=./credentials/google-credentials.json
GOOGLE_STORAGE_BUCKET=your_bucket_name

# Beeline SIP
BEELINE_SIP_SERVER=your_sip_server
BEELINE_SIP_PORT=5060
BEELINE_SIP_PROTOCOL=UDP
BEELINE_SIP_NUMBER=your_number
BEELINE_SIP_CODEC=PCMA
BEELINE_SIP_MAX_SESSIONS=5

# CORS
CORS_ORIGIN=http://localhost:3001
